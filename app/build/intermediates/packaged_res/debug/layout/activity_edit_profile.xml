<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:orientation="vertical"
    tools:context=".ui.profile.activity.editProfile.EditProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/metropolis_semibold"/>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/editImage"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/edit_profile"
                android:layout_marginTop="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:layout_gravity="end"/>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:cardCornerRadius="@dimen/_18sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_2sdp">



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/new_dummy_profile"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginVertical="@dimen/_2sdp"
                android:indeterminateTint="@color/red_F95047"/>
        </androidx.cardview.widget.CardView>

        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:strokeColor="@color/red_F95047"
            app:cardCornerRadius="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/metropolis_regular"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10sdp"
                android:text="John Deo"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="TouchTargetSizeCheck" />


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:strokeColor="@color/red_F95047"
            app:cardCornerRadius="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/ic_calender"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/metropolis_regular"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10sdp"
                android:text="November 3, 1991"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="TouchTargetSizeCheck" />


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:strokeColor="@color/red_F95047"
            app:cardCornerRadius="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/locationTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/metropolis_regular"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10sdp"
                android:text="Sector 32, Entertainment District, Amsterdam"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                tools:ignore="TouchTargetSizeCheck" />


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:strokeColor="@color/red_F95047"
            app:cardCornerRadius="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/ic_gender"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/metropolis_regular"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10sdp"
                android:text="Male"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="TouchTargetSizeCheck" />


        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:elevation="@dimen/_15sdp"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="@color/white"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_marginBottom="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            tools:ignore="UnusedAttribute">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:fontFamily="@font/metropolis_light"
                    android:layout_marginVertical="@dimen/_10sdp"                    android:fontFamily="@font/metropolis_light"
                    android:text="Select your fitness level."
                    android:textSize="@dimen/_13ssp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/beginner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/red_F95047"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/BeginnerTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:drawableStart="@drawable/begginer_rocket"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="Beginner"
                        android:drawablePadding="@dimen/_10sdp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_regular"/>

                    <ImageView
                        android:id="@+id/beginner_check"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:src="@drawable/check_mark"
                        android:scaleType="fitXY"/>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/intermediate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/red_F95047"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/intermediate_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:src="@drawable/check_mark"
                        android:scaleType="fitXY"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/IntermediateTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:drawableStart="@drawable/start_up"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="Intermediate"
                        android:drawablePadding="@dimen/_10sdp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_regular"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/experienced"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:strokeColor="@color/red_F95047"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/experienced_check"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:src="@drawable/check_mark"
                        android:scaleType="fitXY"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/experiencedTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:drawableStart="@drawable/rocket_fast"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="Experienced"
                        android:drawablePadding="@dimen/_10sdp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_regular"/>

                </com.google.android.material.card.MaterialCardView>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports and ability"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/metropolis_light"/>


                <TextView
                    android:id="@+id/editSports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_edit_payment"
                    android:fontFamily="@font/metropolis_semibold"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp" />

            </FrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#E2E2E2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sports"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/rv_profile_list_item_sports_ability"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When do you play?"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_gravity="start"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/metropolis_light"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/weekendLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Scv"
                    android:layout_width="48dp"
                    android:layout_height="@dimen/_40sdp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="@dimen/_12sdp"
                    app:strokeColor="@color/red_F95047"
                    app:strokeWidth="@dimen/_1sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Stv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@color/red_F95047"
                        android:textSize="@dimen/_15ssp" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Mcv"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/red_F95047"
                    app:cardCornerRadius="@dimen/_12sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Mtv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/red_F95047"
                        android:textSize="@dimen/_15ssp"
                        android:gravity="center"
                        android:text="M"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Tcv"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/red_F95047"
                    app:cardCornerRadius="@dimen/_12sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Ttv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/red_F95047"
                        android:textSize="@dimen/_15ssp"
                        android:gravity="center"
                        android:text="T"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Wcv"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/red_F95047"
                    app:cardCornerRadius="@dimen/_12sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Wtv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/red_F95047"
                        android:textSize="@dimen/_15ssp"
                        android:gravity="center"
                        android:text="W"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Thcv"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/red_F95047"
                    app:cardCornerRadius="@dimen/_12sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Thtv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/red_F95047"
                        android:textSize="@dimen/_15ssp"
                        android:gravity="center"
                        android:text="T"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Fcv"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/red_F95047"
                    app:cardCornerRadius="@dimen/_12sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Ftv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/red_F95047"
                        android:textSize="@dimen/_15ssp"
                        android:gravity="center"
                        android:text="F"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Sacv"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/red_F95047"
                    app:cardCornerRadius="@dimen/_12sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Satv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/red_F95047"
                        android:textSize="@dimen/_15ssp"
                        android:gravity="center"
                        android:text="S"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>

                </com.google.android.material.card.MaterialCardView>




            </LinearLayout>
        </HorizontalScrollView>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/Slay"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/metropolis_light"
                        android:text="Sunday"
                        android:textSize="@dimen/_12ssp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Sstv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="00:00am - 23:59 pm"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/sundaySlider"
                        style="@style/Widget.AppCompat.SeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:duplicateParentState="true"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        app:thumbColor="@color/red_F95047"
                        app:thumbRadius="8dp"
                        app:thumbStrokeColor="@color/red_F95047"
                        app:tickColor="@color/black"
                        app:trackColorActive="@color/red_F95047"
                        app:trackColorInactive="#707070"
                        app:trackHeight="@dimen/_2sdp"
                        tools:ignore="SpeakableTextPresentCheck" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/Mlay"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/metropolis_light"
                        android:text="Monday"
                        android:textSize="@dimen/_12ssp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Mstv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="00:00am - 23:59 pm"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/mondaySlider"
                        style="@style/Widget.AppCompat.SeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:duplicateParentState="true"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        android:valueFrom="0"
                        android:valueTo="10"
                        app:thumbColor="@color/red_F95047"
                        app:thumbRadius="8dp"
                        app:thumbStrokeColor="@color/red_F95047"
                        app:tickColor="@color/black"
                        app:trackColorActive="@color/red_F95047"
                        app:trackColorInactive="#707070"
                        app:trackHeight="@dimen/_2sdp"
                        tools:ignore="SpeakableTextPresentCheck" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/Tlay"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/metropolis_light"
                        android:text="Tuesday"
                        android:textSize="@dimen/_12ssp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Tstv"
