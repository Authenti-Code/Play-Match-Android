<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.profile.fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/profile_bg_view"
        android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_gravity="start"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/metropolis_semibold"/>

        <ImageView
            android:id="@+id/addTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/setting"/>

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:src="@drawable/ic_edit_profile"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal">
        
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:cardCornerRadius="@dimen/_18sdp"
            android:layout_marginVertical="@dimen/_5sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/new_dummy_profile"/>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/_130sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Deo "
                android:singleLine="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/metropolis_semibold"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="johndeo@gmail.com"
                android:fontFamily="@font/metropolis_light"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black_707070"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November 3, 1991"
                android:fontFamily="@font/metropolis_light"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black_707070"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardElevation="0dp"

                app:cardBackgroundColor="#66B7B7B7"
                app:cardCornerRadius="@dimen/_3sdp">




                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center"
                    android:text="Male"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>


            </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#66B7B7B7"
                    app:cardCornerRadius="@dimen/_3sdp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:drawableStart="@drawable/walk"
                        android:fontFamily="@font/metropolis_light"
                        android:gravity="center"
                        android:paddingStart="@dimen/_8sdp"
                        android:text="3 KM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp" />


                </com.google.android.material.card.MaterialCardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_30sdp"
            app:strokeWidth="@dimen/_1sdp"
            app:strokeColor="@color/red_F95047"
            app:cardCornerRadius="@dimen/_5sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/start_up"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Intermediate"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_5sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/pin"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:singleLine="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="23 Amsterdam, St.."
                        android:drawablePadding="@dimen/_10sdp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/metropolis_semibold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="#E2E2E2" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Scv"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Stv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="S"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Mcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardBackgroundColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Mtv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="M"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Tcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardBackgroundColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Ttv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="T"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Wcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Wtv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="W"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Thcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Thtv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="T"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Fcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Ftv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="F"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Sacv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_7sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Satv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="S"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>




        </LinearLayout>

        </HorizontalScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports and ability"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/metropolis_semibold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="#E2E2E2" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sports"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/rv_profile_list_item_sports_ability"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/metropolis_semibold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="#E2E2E2" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_statistics"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_65sdp"
            app:spanCount="2"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/rv_list_item_profile_statistics"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.core.widget.NestedScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>