<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_height="@dimen/_115sdp"
        app:cardElevation="@dimen/_5sdp"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="@dimen/_8sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_8sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/your_team"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:visibility="visible"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:indeterminateTint="@color/red_F95047"/>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T20 League Match"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 Dec 2022"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/greay_B7B7B7"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM - 2:00 PM"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/greay_B7B7B7"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardElevation="0dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/_10sdp"
                            app:cardBackgroundColor="#66B7B7B7"
                            app:cardCornerRadius="@dimen/_3sdp">




                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/genderTv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/black_707070"
                                android:textSize="@dimen/_8ssp"
                                android:gravity="center"
                                android:text="Male"
                                android:backgroundTint="@color/white"
                                android:fontFamily="@font/metropolis_light"/>


                        </com.google.android.material.card.MaterialCardView>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/host"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:visibility="visible"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            app:cardElevation="0dp"
                           app:strokeColor="@color/red_F95047"
                            app:strokeWidth="@dimen/_1sdp"
                            app:cardCornerRadius="@dimen/_3sdp">




                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/red_F95047"
                                android:textSize="@dimen/_8ssp"
                                android:gravity="center"
                                android:text="Host"
                                android:backgroundTint="@color/white"
                                android:fontFamily="@font/metropolis_light"/>


                        </com.google.android.material.card.MaterialCardView>

                            <ImageView
                                android:id="@+id/chat"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_13sdp"
                                android:src="@drawable/ic_message"
                                android:paddingBottom="@dimen/_5sdp"
                                android:layout_gravity="center|end"/>

                        </FrameLayout>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/line"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sector 32, Entertainment District, 23156,"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/greay_B7B7B7"/>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amsterdam,Wellington St. "
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/greay_B7B7B7"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/line"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/red_E65D50"
                    app:cardCornerRadius="@dimen/_5sdp">




                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fitnessLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:textSize="@dimen/_8ssp"
                        android:gravity="center"
                        android:text="Intermediate"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/red_E65D50"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_5sdp">




                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sportsName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:textColor="#D66657"
                        android:textSize="@dimen/_8ssp"
                        android:gravity="center"
                        android:text="Cricket"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/metropolis_light"/>


                </com.google.android.material.card.MaterialCardView>
</LinearLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>