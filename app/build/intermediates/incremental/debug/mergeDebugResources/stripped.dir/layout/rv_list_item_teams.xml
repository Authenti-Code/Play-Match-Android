<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:id="@+id/cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_height="@dimen/_155sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_8sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="start"
                    android:background="@drawable/svg_red_tag">

                    <TextView
                        android:id="@+id/sportLevel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Intermediate"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textSize="@dimen/_7sdp"
                        android:fontFamily="@font/metropolis_light"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/ic_edit"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="@dimen/_5sdp"
                    android:src="@color/white"
                    app:civ_border_color="@color/red_F95047"
                    app:civ_border_width="@dimen/_2sdp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="@dimen/_5sdp"
                    android:src="@drawable/juventus" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:visibility="visible"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:indeterminateTint="@color/red_F95047"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_10sdp"
                    android:src="@drawable/ic_path"
                    android:layout_gravity="bottom|center_horizontal"/>


            </FrameLayout>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Team ABC"
                android:singleLine="true"
                android:fontFamily="@font/metropolis_semibold"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_gravity="center_horizontal|bottom"
        app:cardBackgroundColor="@color/red_E65D50"
        app:cardCornerRadius="@dimen/_5sdp">




        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sportName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:textSize="@dimen/_10ssp"
            android:gravity="center"
            android:text="Cricket"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/metropolis_light"/>


    </com.google.android.material.card.MaterialCardView>


</FrameLayout>