<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.activity.settingActivity.SettingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20sp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/metropolis_semibold"/>

    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardElevation="5dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_setting_notification"
            android:paddingStart="@dimen/_20sdp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:text="Notifications"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/metropolis_semibold"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notification_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:theme="@style/SCBSwitch"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/_10sdp"
        android:thumb="@drawable/drawable_switchbutton"
        app:track="@drawable/drawable_track"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</FrameLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardElevation="5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_setting_card"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"
                android:gravity="center"
                android:text="Cards"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/metropolis_semibold"/>



    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardElevation="5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_setting_about_us"
            android:paddingStart="@dimen/_20sdp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:text="About us"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/metropolis_semibold"/>



    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardElevation="5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_setting_reset_password"
            android:paddingStart="@dimen/_20sdp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:text="Reset Password"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/metropolis_semibold"/>



    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardElevation="5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_setting_privacy"
            android:paddingStart="@dimen/_20sdp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:text="Privacy Policy"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/metropolis_semibold"/>



    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardElevation="5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_setting_delete_acc"
            android:paddingStart="@dimen/_20sdp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:text="Delete Account"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/metropolis_semibold"/>



    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardElevation="5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_setting_logout"
            android:paddingStart="@dimen/_20sdp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:text="Logout"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/metropolis_semibold"/>



    </com.google.android.material.card.MaterialCardView>


</androidx.appcompat.widget.LinearLayoutCompat>