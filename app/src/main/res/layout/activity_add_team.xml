<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.teams.activity.AddTeamActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Team"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/metropolis_semibold"/>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_gravity="start">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:src="@color/white"
            app:civ_border_color="@color/red_F95047"
            app:civ_border_width="@dimen/_2sdp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:src="@drawable/juventus" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:elevation="@dimen/_10sdp"
            android:src="@drawable/edit_team_img"
            android:layout_gravity="bottom|center_horizontal"/>


    </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Team name"
            android:textColorHint="@color/black_B7B7B7"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/metropolis_light"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/black_707070" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/selectSport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:strokeWidth="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:strokeColor="@color/red_E65D50"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/selectSportTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_10ssp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="Select Sport"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_location_nav"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Location"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColorHint="@color/black_B7B7B7"
        android:backgroundTint="@color/white"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/metropolis_semibold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/black_707070" />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_gender"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="Gender"
        android:textColorHint="@color/black_B7B7B7"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:singleLine="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/metropolis_semibold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/black_707070" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Standard"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_gravity="start"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/metropolis_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/beginner"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:strokeColor="@color/red_E65D50"
            android:layout_marginEnd="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp">




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/beginnerTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#D66657"
                android:textSize="@dimen/_8ssp"
                android:gravity="center"
                android:text="Beginner"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/metropolis_light"/>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/intermediate"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:strokeWidth="@dimen/_1sdp"
            app:strokeColor="@color/red_E65D50"
            app:cardBackgroundColor="@color/red_F95047"
            app:cardCornerRadius="@dimen/_5sdp">




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/intermediateTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                android:gravity="center"
                android:text="Intermediate"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/metropolis_light"/>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/experienced"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            app:strokeWidth="@dimen/_1sdp"
            app:strokeColor="@color/red_E65D50"
            android:layout_marginEnd="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp">




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/experiencedTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#D66657"
                android:textSize="@dimen/_8ssp"
                android:gravity="center"
                android:text="Experienced"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/metropolis_light"/>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kit Provided?"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_gravity="start"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/metropolis_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kitYes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_10sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:strokeColor="@color/red_E65D50"
            app:cardCornerRadius="@dimen/_5sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/kitYesTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/red_F95047"
                android:gravity="center"
                android:text="Yes"
                android:textSize="@dimen/_8sdp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/metropolis_light"/>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kitNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:cardBackgroundColor="@color/red_F95047"
            app:strokeColor="@color/red_E65D50"
            app:cardCornerRadius="@dimen/_5sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/kitNoTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="No"
                android:gravity="center"
                android:textSize="@dimen/_8sdp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/metropolis_light"/>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Away Matches?"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_gravity="start"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/metropolis_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/awayYes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                app:strokeWidth="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                app:strokeColor="@color/red_E65D50"
                app:cardCornerRadius="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awayYesTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:gravity="center"
                    android:text="Yes"
                    android:textSize="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/awayNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                app:strokeWidth="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="@color/red_F95047"
                app:strokeColor="@color/red_E65D50"
                app:cardCornerRadius="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awayNoTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="No"
                    android:gravity="center"
                    android:textSize="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When do you play?"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_gravity="start"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/metropolis_light"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|end"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Scv"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Stv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="S"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Mcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardBackgroundColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Mtv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="M"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Tcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardBackgroundColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Ttv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="T"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Wcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Wtv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="W"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Thcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Thtv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="T"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Fcv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Ftv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="F"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Sacv"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_7sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/red_F95047"
                app:cardCornerRadius="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Satv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/red_F95047"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="S"
                    android:drawablePadding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_light"/>

            </com.google.android.material.card.MaterialCardView>




        </LinearLayout>
    </HorizontalScrollView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/metropolis_light"
                android:text="Monday"
                android:textSize="@dimen/_12ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_10ssp"
                android:hint="00:00 - 23:59"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/metropolis_light"/>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/mondaySlider"
                style="@style/Widget.AppCompat.SeekBar"
                android:duplicateParentState="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:trackHeight="@dimen/_2sdp"
                android:valueFrom="0"
                android:valueTo="10"
                app:thumbRadius="8dp"
                app:thumbColor="@color/red_F95047"
                app:thumbStrokeColor="@color/red_F95047"
                app:tickColor="@color/black"
                app:trackColorActive="@color/red_F95047"
                app:trackColorInactive="#707070"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:fontFamily="@font/metropolis_light"
                android:text="Tuesday"
                android:textSize="@dimen/_12ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textSize="@dimen/_10ssp"
                android:hint="00:00 - 18:00"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/metropolis_light"/>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/tuesdaySlider"
                style="@style/Widget.AppCompat.SeekBar"
                android:duplicateParentState="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:trackHeight="@dimen/_2sdp"
                app:thumbRadius="8dp"
                android:valueFrom="0"
                android:valueTo="10"
                app:thumbColor="@color/red_F95047"
                app:thumbStrokeColor="@color/red_F95047"
                app:tickColor="@color/black"
                app:trackColorActive="@color/red_F95047"
                app:trackColorInactive="#707070"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other details"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_gravity="start"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/metropolis_light"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_125sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:strokeColor="@color/red_E65D50"
            android:layout_marginEnd="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:textColorHint="@color/black_B7B7B7"
                android:inputType="text|textMultiLine"
                android:layout_marginStart="@dimen/_5sdp"
                android:hint="Type other details here.."
                android:backgroundTint="@color/white"
                android:fontFamily="@font/metropolis_light"/>

        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/createTeam"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_30sdp"

            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:cardBackgroundColor="@color/red_F95047"
            app:cardCornerRadius="@dimen/_18sdp">

            <TextView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/metropolis_light"
                android:text="Create team"/>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>