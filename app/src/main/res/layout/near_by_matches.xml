<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.activity.NearByMatches">

  <RelativeLayout
      android:layout_marginTop="@dimen/_30sdp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/_10sdp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:src="@drawable/ic_back"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearby Matches"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/metropolis_semibold"/>

    <ImageView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/search"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/filter"/>

    <ImageView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/grey_search"/>


  </RelativeLayout>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_nearby_matches"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp"
    tools:listitem="@layout/rv_near_by_match_list"/>

    <ImageView
        android:id="@+id/streetMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_45sdp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/streetmap"/>

  </FrameLayout>


</androidx.appcompat.widget.LinearLayoutCompat>