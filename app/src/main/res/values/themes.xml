<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayMatch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>


        <!-- Customize your theme here. -->

    </style>

    <style name="DialogTheme" parent="ThemeOverlay.Material3.MaterialCalendar.Fullscreen">
        <item name="colorAccent">@color/beige</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="dialogTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorAccent">@color/red_F95047</item>
        <item name="colorPrimary">@color/black</item>
        <item name="fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background">@drawable/bottom_sheet_dialog</item>
    </style>

    <!--switch button style-->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/red_F95047</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>